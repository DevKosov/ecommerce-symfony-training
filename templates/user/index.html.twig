{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
    <div class="container">
        <h1>User index</h1>
        <div class="row">
            <div class="col-8 offset-2">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-user-check"></i> Mon Compte</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-sm table-hover">
                            <tr><th>N° Client</th><td>{{ user.id }}</td></tr>
                            <tr><th>Nom</th><td>{{ user.nom }}</td></tr>
                            <tr><th>Prénom</th><td>{{ user.prenom }}</td></tr>
                            <tr><th>Email</th><td>{{ user.email }}</td></tr>
                            <tr><th>Activité</th>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('commandes') }}">
                                        <span class="badge badge-light">{{ user.getCommandes() | length }}</span> Commande(s)                            </a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
