{% extends "base.html.twig" %}

{% block body %}

    <!-- debut du block body -->
    <div class="card col-md-12">
        <div class="card-header">
            <h1><i class="fas fa-store"></i> {{ 'default.rayon' | trans }} {{category.libelle}} : {{ products | length}} {{ 'default.produits' | trans }}</h1>
        </div>
        <div class="card-body row">
            {% for product in products %}
                {% include "boutique/product.html.twig" %}
            {% endfor %}
        </div>
    </div>
    <!-- fin du block body -->

{% endblock %}